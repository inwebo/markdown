{
    "name": "inwebo/markdown",
    "description": "A modern PHP markdown parser",
    "type": "library",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Inwebo\\Markdown\\": "src/"
        }
    },
  "autoload-dev": {
    "psr-4": {
      "Inwebo\\Markdown\\Tests\\": "tests/"
    }
  },
    "authors": [
        {
            "name": "inwebo",
            "email": "github@inwebo.net"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
      "php-cs-fixer": "vendor/bin/php-cs-fixer --allow-risky=yes fix",
      "phpunit": "vendor/bin/phpunit --testdox",
      "phpstan": "vendor/bin/phpstan analyse src -c phpstan.neon"
    }
}
